@model AppointmentSchedule.ViewModels.LimitedEditVM

@{
    ViewBag.Title = "Edit Appointment";
}

<h2>Edit Appointment</h2>

<div>
    <strong>Worker:</strong> @Html.DisplayFor(model => model.WorkerFullName)
    <br />
    <strong>Client:</strong> @Html.DisplayFor(model => model.ClientFullName)
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Status)
        @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TextBox)
        @Html.TextAreaFor(model => model.TextBox, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.TextBox, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
}

@Html.ActionLink("Back to List", "Index")
